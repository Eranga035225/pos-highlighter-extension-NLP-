{
  "manifest_version": 3,
  "name": "POS Highlighter",
  "version": "1.0",
  "description": "Highlight nouns, verbs and adjectives on any webpage.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
